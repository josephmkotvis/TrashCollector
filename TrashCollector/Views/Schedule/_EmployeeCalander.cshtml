
@model TrashCollector.Models.WorkScheduleViewModel
@if (Model.CustomersAndDays.Count == 0)
{
    <p> You currently do not have any pickups scheduled.</p>
}
else
{
    <p> Here are your pick ups. </p>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Address</th>
                <th scope="col">Directions </th>
                <th scope="col">Customer's Name</th>
                <th scope="col">Pick Up</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.CustomersAndDays.Count; i++)
            {
                <tr>
                    <td>
                        @Model.CustomersAndDays[i].User.Address
                    </td>
                    <td>
                        @Html.ActionLink("Directions", "Index", "Map", new { id = Model.CustomersAndDays[i].UserDayId }, null)
                    </td>
                    <td>
                        @Model.CustomersAndDays[i].User.FullName
                    </td>
                    <td>
                        @Html.ActionLink("Pick Up", "EmployeeCompletePickUp", "Schedule", new { id = Model.CustomersAndDays[i].UserDayId }, null)
                    </td>
                </tr>
            }
        </tbody>
    </table>
}


