@model TrashCollector.Models.User
<table class="table">
    <thead>
        <tr>
            <th scope="col">Day</th>
            <th scope="col">Pick Up Status</th>
        </tr>
    </thead>
    <tbody>
       @for (int i = 0; i < Model.Days.Count; i++)
       {
        <tr>
            <th scope="row"> @Model.Days[i].Date</th>
            <td>
                <div class="checkbox">
                    @Html.CheckBoxFor(m => m.Days[i].HasPickUp)
                    <label> Has Pick Up Scheduled </label>
                </div>
            </td>
        </tr>
       }       
    </tbody>
</table>